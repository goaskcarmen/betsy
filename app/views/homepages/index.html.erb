<!-- ########### Products ################### -->

<div class="row">
  <div class="large-12 columns">
    <div class="panel">
      <div class="row">
        <div class="small-block-grid-5">
        <% @products.each do |p| %>
          <li>
            <%= link_to image_tag(p.photo_url, :title => p.name, :alt => p.name), product_path(p), method: :get %>
            <h5 class="subheader"><%=p.name%></h5>
            <h6 class="subheader"><%= number_to_currency(p.unit_price)%></h6>
          </li>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


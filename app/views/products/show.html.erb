<h1><%= @product.name %></h1>
<p>Price: $<%= @product.unit_price %>
<img src="<%= @product.photo_url %>", alt="<%= @product.name %>">
<p>
  <% if @product.quantity == 0 %>
    <%= "Out of Stock" %>
  <% else %>
    <%= @product.quantity %> left in stock.
  <% end %>
</p>
<p><%= @product.description %></p>

<%= button_to "Add item to cart", create_cart_product_path(@product), method: :post %>
<%= button_to "View my cart", show_cart_product_path, method: :get %>
